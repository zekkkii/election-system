<div class="container">

    <div class="row">

        <div class="col-md-4"></div>

        <div class="col-md-4">

            <form method="POST" action="{{#if editMode}}""{{else}}""{{/if}}" class="dropdown-menu p-4">

                <div class="card mt-5">

                    <div class="card-header bg-success">
                        <h6 class="text-center text-white"> {{#if editMode}}Edite{{else}}Introduzca{{/if}} la info del Partido: </h6>
                    </div>

                    <div class="card-body">

                        <div class="mb-3">
                            <label for="nombre-de-partido" class="form-label">Nombre del Partido:</label>
                            <input type="text" class="form-control" id="nombre-de-partido" name="Partido">
                        </div>
                        
                        <div class="mb-3">
                            <label for="imagen-partido" class="form-label">Seleccione el logo: </label>
                            <input class="form-control" type="file" id="imagen-partido" name="ImagenPartido">
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="statusActive">
                            <label class="form-check-label" for="statusActive" name="StatusActive"> Activo </label>
                        </div>

                        <button type="submit" class="btn btn-success float end"> Guardar </button>

                    </div>

                </div>

            </form>

        </div>

        <div class="col-md-4"></div>    

    </div>

</div>