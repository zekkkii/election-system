<section class="py-5 text-center container">
  <div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h1 class="fw-light">Ciudadanos</h1>
      <p>
        <a href="/admin/ciudadanos/create" class="btn btn-outline-primary my-2">AÃ±adir nuevo Ciudadano</a>
      </p>
    </div>
  </div>
</section>

<div class="d-flex">
{{#each data}}

  <div class="album py-5 bg-light">
      <div class="container">
          <div class="card" style="width: 18rem;">
             {{#if estado}}
                  <div class="bg-success text-white text-center p-1">
                    <span>Disponible/visible</span>
                  </div>
                  {{else}}
                  <div class="bg-danger text-white text-center p-1">
                    <span>Eliminado/Invisible</span>
                  </div>
                {{/if}}
          <div class="card-body">
              <h5 class="card-title">{{nombre}} {{apellido}}</h5>
              <p class="card-text">{{email}}</p>
              <p>{{documentoIdentidad}}</p>
              <div class="d-flex">
                <a href="/admin/ciudadanos/update/{{id}}" class="btn btn-primary mx-2"> Editar </a>
                {{#if estado}}
                  <form action="/admin/ciudadanos/delete/{{id}}" method="post">
                    <button type="submit" id="delete" class="btn btn-danger">Eliminar</button>
                  </form> 
                  {{else}}       
                {{/if}}      
              </div>
          </div>
          </div>
      </div>
  </div>

{{/each}}
</div>