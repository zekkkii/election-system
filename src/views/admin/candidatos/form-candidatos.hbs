<div class="container">

    <div class="row">

        <div class="col-md-3"></div>

        <div class="col-md-6">
            
            <form method="POST" enctype="multipart/form-data" action="{{#if editMode}} {{else}}/admin/candidatos/create{{/if}}">

                <div class="card mt-5">

                    <div class="card-header bg-success"> 
                        <h5 class="text-white"> {{#if editMode}}Edite{{else}}Introduzca{{/if}} la info del Candidato: </h5>   
                    </div>

                    <div class="card-body">

                        <div class="mb-3">
                            <label for="name" class="form-label">Nombre: </label>
                            <input type="text" class="form-control" {{#if editMode}} value="{{data.nombre}}" {{/if}} id="name" name="Name">
                        </div>


                        <div class="mb-3">
                            <label for="apellidos" class="form-label">Apellidos: </label>
                            <input type="text" class="form-control" {{#if editMode}} value="{{data.apellido}}" {{/if}} id="apellidos" name="Apellidos">
                        </div>

                        <div class="mb-3">
                            <label for="imagen-candidato" class="form-label">Seleccione una imagen: </label>
                            {{#if editMode}} <small>Si quiere mantener la foto actual, solo omita esta opcion</small> {{/if}}
                            <input class="form-control" type="file" id="imagen-candidato" name="Imagen_candidato">
                        </div>

                            {{#if editMode}} 
                                <select class="form-select mb-4" aria-label="Default select example" name="SelectCargo">
                                    {{#each puestos as |puesto|}}
                                        {{#if (compare puesto.id ../data.puestoElectivoId)}}
                                            <option value="{{puesto.id}}" selected> {{puesto.nombre}}  </option>    
                                            {{else}}
                                                <option value="{{puesto.id}}" > {{puesto.nombre}} </option>                                 
                                        {{/if}}  
                                    {{/each}}   
                                </select>
                                    
                                {{else}}
                                    {{#if puestos}}
                                        <select class="form-select mb-4" aria-label="Default select example" name="SelectCargo">
                                        <option value="" selected> Seleccione el Cargo </option>
                                            {{#each puestos}}
                                                <option value="{{id}}" > {{nombre}} </option>
                                            {{/each}}
                                        </select>
                                        {{else}}
                                        <h5>No se encontro ningun cargo...</h5>
                                    {{/if}}
                            {{/if}}

                            {{#if editMode}} 
                                <select class="form-select mb-4" aria-label="Default select example" name="SelectPartido">
                                    {{#each partidos as |partido|}}
                                        {{#if (compare partido.id ../data.partidoId)}}
                                            <option value="{{partido.id}}" selected > {{partido.nombre}}  </option>  
                                               {{else}}
                                                <option value="{{partido.id}}" > {{partido.nombre}} </option>                                        
                                        {{/if}}  
                                    {{/each}}   
                                </select>
                                    
                                {{else}}
                                    {{#if partidos}}
                                        <select class="form-select mb-4" aria-label="Default select example" name="SelectPartido">
                                            <option value="" selected> Seleccione el partido </option>
                                            {{#each partidos}}
                                                <option value="{{id}}" > {{nombre}} </option>
                                            {{/each}}
                                        </select>
                                        {{else}}
                                        <h5>No se encontro ningun partido...</h5>

                                    {{/if }}
                            {{/if}}

                         <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="StatusActive"  name="statusActive" value="true" {{#if editMode}} {{#if data.estado}} checked {{/if}} {{else}}checked {{/if}}  >
                            <label class="form-check-label" for="StatusActive"> Activo </label>
                        </div>

                        {{#if puestos}}
                            {{#if partidos}}
                                <button type="btn" class="btn btn-success float-right w-25 float-end"> AÃ±adir </button>                            
                            {{/if}}
                        {{/if}}
                    </div>

                </div>
            </form>

        </div>

        <div class="col-md-3"></div>

    </div>

</div>